{
	"compilerOptions": {
		"target": "esnext",
		"jsx": "preserve",
		"lib": ["esnext", "dom"],
		"baseUrl": "./",
		"module": "esnext",
		"moduleResolution": "node",
		"paths": {
			"@/*": ["src/*"]
		},
		"resolveJsonModule": true,
		"types": ["node"],
		"strict": true,
		"declaration": false,
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"references": [{ "path": "./tsconfig.node.json" }],
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"vite.config.ts"
	],
	"exclude": ["dist", "node_modules"]
}
